datasource vbom {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String    @id @default(uuid())
  age          Int?
  username     String?   @unique
  email        String    @unique
  fullName     String?
  passwordHash String?   @map("password_hash")
  googleId     String?   @unique
  avatarUrl    String?   // Added to store Google avatar URL
  sessions     Session[]
  projects     Project[]
}

model Session {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  expiresAt DateTime @map("expires_at") @vbom.Timestamptz
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Project {
  id          String  @id @default(uuid())
  projectName String  // Unique per user via composite index
  createdAt   DateTime @default(now())
  userId      String  @map("user_id")
  user        User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, projectName])
}